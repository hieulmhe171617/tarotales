<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#615252"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvDay"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="day"
            android:textColor="#FFF"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="italic"
            android:text="month"
            android:textColor="#CAC7C7"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvYear"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="italic"
            android:text="year"
            android:textColor="#CAC7C7"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivCard1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/tarot_back"/>
            <TextView
                android:id="@+id/tvCard1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name of Card"
                android:textColor="#FFF"
                android:gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivCard2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/tarot_back"/>
            <TextView
                android:id="@+id/tvCard2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name of Card"
                android:textColor="#FFF"
                android:gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivCard3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/tarot_back"/>
            <TextView
                android:id="@+id/tvCard3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name of Card"
                android:textColor="#FFF"
                android:gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>